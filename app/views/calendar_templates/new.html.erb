<form action="/calendar_invite/results">
  <div>
    <label for="name">Name</label>
    <input type="text" id="name" name="name">
  </div>
  <div>
    <label for="event_details">Details</label>
    <input type="text" name="event_details" id="event_details">
  </div>
  <div>
    <label for="location">Location</label>
    <input type="text" name="location" id="location">
  </div>
  <div>
    <label for="event_begins">Start time</label>
    <input type="datetime-local" name="event_begins" id="event_begins">
  </div>
  <div>
    <label for="event_ends">End time</label>
    <input type="datetime-local" name="event_ends" id="event_ends">
  </div>
  <button>Generate</button>
</form>
